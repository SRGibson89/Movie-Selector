<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="384" Width="576">
    <Grid>
        <Label Content="Steven's Film Sector" Height="35" Margin="205,10,204,0" VerticalAlignment="Top" RenderTransformOrigin="0.583,0.514" FontWeight="Bold" FontSize="16"/>
        <Image x:Name="imgShow" Height="226" Margin="208,79,208,0" VerticalAlignment="Top" Source="E:\Documents\Movie Program\Movie 1\default.jpg"/>
        <Label Content="Select a number between 1 and 10. This will show you the film" HorizontalAlignment="Left" Height="29" Margin="10,45,0,0" VerticalAlignment="Top" Width="497"/>
        <Label Content="Number:" HorizontalAlignment="Left" Height="26" Margin="38,79,0,0" VerticalAlignment="Top" Width="74"/>
        <Button x:Name="btnGo" Content="Select" HorizontalAlignment="Left" Height="32" Margin="38,141,0,0" VerticalAlignment="Top" Width="74" Click="btnGo_Click"/>
        <Label x:Name="lblFilm" Content="No film Selected" HorizontalAlignment="Left" Height="33" Margin="38,305,0,0" VerticalAlignment="Top" Width="434" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="txtFilm" HorizontalAlignment="Left" Height="26" Margin="38,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" TextChanged="txtFilm_TextChanged"/>

    </Grid>
</Window>
